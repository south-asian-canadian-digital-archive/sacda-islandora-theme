{
  "name": "sacda_test",
  "private": true,
  "scripts": {
    "livereload": "livereload --exclusions node_modules/ --exts 'css,js,twig,theme,apng,avif,gif,jpg,jpeg,jfif,pjpeg,pjp,png,svg,webp'",
    "tailwind:watch": "tailwindcss -i ./css/main.css -o ./dist/main.css --watch",
    "dev:twig": "concurrently \"pnpm run tailwind:watch\" \"pnpm run livereload\"",
    "dev:svelte": "cd src-svelte && pnpm build --watch && cd ../..",
    "build:svelte": "cd src-svelte && pnpm build && cd ../..",
    "dev": "concurrently \"pnpm run dev:twig\" \"pnpm run dev:svelte\""
  },
  "devDependencies": {
    "concurrently": "^9.1.0",
    "livereload": "^0.9.3"
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.1.17",
    "tailwindcss": "^4.1.17"
  }
}