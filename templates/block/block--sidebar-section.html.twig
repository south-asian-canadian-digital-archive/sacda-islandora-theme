{#
/**
 * @file
 * Generic theme override for sidebar section blocks.
 * Usage: Assigned via hook_theme_suggestions_block_alter().
 */
#}
<div class="mt-8 pt-8 border-t border-border">
	{{ title_prefix }}
	{% if label %}
		<h2 class="text-sm font-bold text-muted-foreground uppercase tracking-wider mb-2">{{ label }}</h2>
	{% endif %}
	{{ title_suffix }}
	{% block content %}
		<div class="sidebar-block-content text-sm">
			{{ content }}
		</div>
	{% endblock %}
</div>
