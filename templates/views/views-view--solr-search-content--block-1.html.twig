{#
/**
 * @file
 * Theme override for Solr Search Content view - search results display.
 *
 * Provides a clean card layout for search results with image, title, date, and description.
 */
#}
<div{{attributes.addClass('sacda-search-results')}}>
	{# Exposed form (sort/filter controls) #}
	{% if exposed %}
		<div class="sacda-search-results__filters mb-6">
			{{ exposed }}
		</div>
	{% endif %}

	{# Header with result count #}
	{% if header %}
		<div class="sacda-search-results__header text-sm text-muted-foreground mb-4">
			{{ header }}
		</div>
	{% endif %}

	{# Search Results Grid #}
	{% if rows %}
		<div class="sacda-search-results__grid">
			{{ rows }}
		</div>
	{% elseif empty %}
		<div class="sacda-search-results__empty text-center py-12 text-muted-foreground">
			{{ empty }}
		</div>
	{% endif %}

	{# Pager #}
	{% if pager %}
		<div class="sacda-search-results__pager mt-8">
			{{ pager }}
		</div>
	{% endif %}
</div>
