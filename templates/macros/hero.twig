{#
/**
 * @file
 * Hero Section Macro - Simplified
 * 
 * Usage:
 *   {% import '@sacda/macros/hero.twig' as hero %}
 *   {{ hero.section({ title: 'Page Title', image: '/path/to/image.jpg' }) }}
 *   {{ hero.title_bar({ title: 'Page Title' }) }}
 */
#}

{% macro section(options) %}
	{% set opts = {
		title: '',
		subtitle: '',
		image: '',
		height: 'h-80 md:h-96'
	}|merge(options) %}

	<section class="hero-section relative w-full {{ opts.height }} flex flex-col justify-center items-center text-center overflow-hidden">
		{# Background Image #}
		{% if opts.image %}
			<img src="{{ opts.image }}" alt="" class="absolute inset-0 w-full h-full object-cover">
			<div class="absolute inset-0 bg-primary/75"></div>
		{% else %}
			<div class="absolute inset-0 bg-primary"></div>
		{% endif %}

		{# Content #}
		<div class="hero-content relative z-10 px-4 max-w-7xl mx-auto w-full">
			{% if opts.title %}
				<span class="text-4xl md:text-5xl lg:text-6xl font-black text-white! mb-4 uppercase">
					{{ opts.title }}
				</span>
			{% endif %}
			{% if opts.subtitle %}
				<p class="text-lg md:text-xl text-white/90 max-w-3xl mx-auto">
					{{ opts.subtitle }}
				</p>
			{% endif %}
		</div>
	</section>
{% endmacro %}

{# Simple title bar (smaller, for internal pages) #}
{% macro title_bar(options) %}
	{% set opts = {
		title: ''
	}|merge(options) %}

	<section class="hero-title-bar bg-primary py-12 md:py-16">
		<div class="px-4 max-w-7xl mx-auto">
			<h1>
				{{ opts.title }}
			</h1>
		</div>
	</section>
{% endmacro %}
