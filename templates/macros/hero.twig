{#
/**
 * @file
 * Hero Section Macro
 * 
 * Provides a reusable hero section with title and background options.
 * 
 * Usage:
 *   {% import '@sacda/macros/hero.twig' as hero %}
 *   {{ hero.section({ title: 'Page Title', background: '/path/to/image.jpg' }) }}
 * 
 * Options:
 *   - title: (string) The hero title text
 *   - subtitle: (string) Optional subtitle text
 *   - background: (string) Background image URL/path
 *   - background_color: (string) CSS color value (used if no background image)
 *   - overlay: (bool) Whether to add a dark overlay (default: true)
 *   - overlay_opacity: (string) Tailwind opacity class e.g. 'opacity-50' (default: 'opacity-60')
 *   - height: (string) Tailwind height class (default: 'h-80 md:h-96')
 *   - align: (string) Text alignment: 'left', 'center', 'right' (default: 'center')
 *   - class: (string) Additional CSS classes for the container
 */
#}

{% macro section(options) %}
	{% set defaults = {
    title: '',
    subtitle: '',
    background: '',
    background_color: 'bg-neutral-900',
    overlay: true,
    overlay_opacity: 'opacity-60',
    height: 'h-80 md:h-96',
    align: 'center',
    class: ''
  } %}
	{% set opts = defaults|merge(options) %}

	{% set align_classes = {
    'left': 'items-start text-left',
    'center': 'items-center text-center',
    'right': 'items-end text-right'
  } %}

	<section
		class="hero-section relative w-full {{ opts.height }} flex flex-col justify-center {{ align_classes[opts.align] ?? align_classes.center }} {{ opts.class }}" {% if opts.background %} style="background-image: url('{{ opts.background }}'); background-size: cover; background-position: center;" {% endif %}>
		{# Background color fallback #}
		{% if not opts.background %}
			<div class="absolute inset-0 {{ opts.background_color }}"></div>
		{% endif %}

		{# Dark overlay for better text readability #}
		{% if opts.overlay and opts.background %}
			<div class="absolute inset-0 bg-black {{ opts.overlay_opacity }}"></div>
		{% endif %}

		{# Content #}
		<div class="hero-content relative z-10 px-4 max-w-7xl mx-auto w-full">
			{% if opts.title %}
				<h1 class="hero-title text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-4">
					{{ opts.title }}
				</h1>
			{% endif %}
			{% if opts.subtitle %}
				<p class="hero-subtitle text-lg md:text-xl text-white/90 max-w-3xl {{ opts.align == 'center' ? 'mx-auto' : '' }}">
					{{ opts.subtitle }}
				</p>
			{% endif %}
		</div>
	</section>
{% endmacro %}

{# 
 * Simple hero with just a title bar (smaller, for internal pages)
 * 
 * Usage:
 *   {{ hero.title_bar({ title: 'About Us' }) }}
 * 
 * Options:
 *   - title: (string) The title text
 *   - background_color: (string) Tailwind bg class (default: 'bg-primary')
 *   - class: (string) Additional CSS classes
 #}
{% macro title_bar(options) %}
	{% set defaults = {
    title: '',
    background_color: 'bg-primary',
    class: ''
  } %}
	{% set opts = defaults|merge(options) %}

	<section class="hero-title-bar {{ opts.background_color }} py-12 md:py-16 {{ opts.class }}">
		<div class="px-4 max-w-7xl mx-auto">
			<h1 class="text-3xl md:text-4xl font-bold text-white">
				{{ opts.title }}
			</h1>
		</div>
	</section>
{% endmacro %}
