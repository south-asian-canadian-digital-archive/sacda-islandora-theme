{#
/**
 * @file
 * Theme override for the page title block.
 * Ensures the page title has the same styling as the hero title bar.
 */
#}
{% if content %}
  {% if hero_data %}
    <section class="hero-title-bar bg-primary py-12 md:py-16">
      <div class="px-4 max-w-7xl mx-auto">
        {{ content }}
      </div>
    </section>
  {% else %}
    <h1>{{ content }}</h1>
  {% endif %}
{% endif %}
