{#
/**
 * @file
 * Theme override for the page title block.
 * Only renders when there's no hero section (hero already shows the title).
 */
#}
{% if content and not hero_data %}
	<section class="hero-title-bar bg-primary py-12 md:py-16">
		<div class="px-4 max-w-7xl mx-auto">
			{{ content }}
		</div>
	</section>
{% endif %}
